@model Cinrad.Service.ViewModels.ProdutoViewModel

<div class="modal-header">
    <h3 class="m-t-none m-b">Novo Produto</h3>
</div>
<div class="modal-body">
    <div class="row">
        <div>
            <form role="form" asp-action="Registrar" asp-controller="Produto" method="post">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div hidden>
                    <input asp-for="Id" value="@Guid.Empty" />
                </div>
                <div class="form-group">
                    <label asp-for="Codigo"></label>
                    <input asp-for="Codigo" placeholder="* Código do produto" type="text" class="form-control" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nome"></label>
                    <input asp-for="Nome" placeholder="Nome do Produto" type="text" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Descrisao"></label>
                    <input asp-for="Descrisao" placeholder="Descrição" type="text" class="form-control" />
                    <span asp-validation-for="Descrisao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsDadosObrigatorio"></label>
                    <input asp-for="IsDadosObrigatorio" type="checkbox" class="form-control" />
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <input type="text" placeholder="Nome da nova apresentação " class="input form-control">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn btn-white"> <i class="fa fa-arrow-down"></i> Adicionar</button>
                        </span>
                    </div>
                </div>

                <div class="form-group">
                    <table class="table table-sm table-striped">
                        <thead>
                            <tr><td>#</td><td>Nome</td><td>Valor</td><td colspan="2">Ações</td></tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>5mg/ml Frasco</td>
                                <td>
                                    <div class="form-group">
                                        <div class="input-group">
                                            <span class="input-group-addon">R$</span>
                                            <input type="text" class="form-control">
                                            <span class="input-group-addon">.00</span>
                                        </div>
                                    </div>
                                </td>

                                <td><a data-toggle="modal" title="Remover"><i class="fa fa-trash"></i></a></td>
                                <td><input type="checkbox" title="habilitar"></td>
                            </tr>
                            <tr>
                                <td>2</td>
                                <td>15mg/ml Frasco</td>
                                <td>
                                    R$ 30,00
                                </td>
                                <td><a data-toggle="modal" title="Remover"><i class="fa fa-trash"></i></a></td>
                                <td><input type="checkbox" title="habilitar"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <label asp-for="CodigoCor">Código de COR do Produto</label>
                        <input asp-for="CodigoCor" type="text" class="form-control demo1 colorpicker-element" value="#5367ce" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}
