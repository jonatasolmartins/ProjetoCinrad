@model Cinrad.Service.ViewModels.TransportadoraViewModel;
@{
    ViewData["Title"] = "RegistrarTransportadora";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Transportadora</h2>
        <ol class="breadcrumb">
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="active">
                <strong>Registrar Transportadora</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-sm-18">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-10">
                            <div class="input-group">
                                <input type="text" placeholder="Buscar Transportadora " class="input form-control">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn btn-white"> <i class="fa fa-search"></i> Buscar</button>
                                </span>
                            </div>
                        </div>

                        <div class="col-sm-2 ">
                            <div class="input-group">
                                <select name="status" id="status" class="input form-control btn-white">
                                    <option value="1" selected>Ativo</option>
                                    <option value="0">Inativo</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="clients-list ">
                        <span class="input-group-btn">
                            <a asp-action="TransportadorModal" asp-controller="Transportador" class="btn btn-primary" data-target="#modal-form" data-toggle="modal"> Novo</a>
                        </span>
                        <div id="modal-form" class="modal fade" aria-hidden="true" data-backdrop="false" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    @await Html.PartialAsync("TransportadorModal");
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            @foreach (var transportadora in ViewBag.Transportadoras)
                            {
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Código</th>
                                            <th>CNPJ</th>
                                            <th>Razão Social</th>
                                            <th> Nome Fantasia</th>
                                            <th> Telefone</th>
                                            <th> Site</th>
                                            <th colspan="4">Açoes</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>@transportadora.Codigo</td>
                                            <td>@transportadora.Cnpj</td>
                                            <td>@transportadora.RazaoSocial</td>
                                            <td>@transportadora.NomeFantasia</td>
                                            <td>@transportadora.Telefone</td>
                                            <td>@transportadora.Site</td>
                                            @*<td><a data-toggle="modal" href="#confirmRemoverModal" title="Remover"><h2> <i class="fa fa-trash"></i></h2></a></td>*@
                                            <td><a data-toggle="modal" href="#modal-form" title="Editar"><h2><i class="fa fa-edit "></i></h2></a></td>
                                            <td><a asp-action="TransportadoraClienteModal" asp-controller="Transportador" data-target="#modal-clientes" data-toggle="modal"><h2><i class="fa fa-users "></i></h2></a>
                                        </tr>
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Modal HTML -->
    <div id="confirmRemoverModal" class="modal fade">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Tem certeza?</h4>
                </div>
                <div class="modal-body">
                    <p>Você realmente quer remover o registro?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-sm btn-default pull-left m-t-n-xs" data-dismiss="modal"><strong>  Não  </strong></button>
                    <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>  SIM  </strong></button>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal HTML -->

</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}



