@model UsuarioViewModel;
@{
    ViewData["Title"] = "RegistrarUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Usuario</h2>
        <ol class="breadcrumb">
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="active">
                <strong>Registar Usuário</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-sm-18">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="row">

                        <div class="col-sm-10">
                            <div class="input-group">
                                <input type="text" placeholder="Search client " class="input form-control">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn btn-white"> <i class="fa fa-search"></i> Search</button>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-2 ">
                            <div class="input-group">
                                <select name="status" id="status" class="input form-control btn-white">
                                    <option value="1" selected>Ativo</option>
                                    <option value="0">Inativo</option>
                                </select>
                            </div>
                        </div>

                    </div>

                    <div class="clients-list ">

                        <span class="input-group-btn">
                            <a data-toggle="modal" class="btn btn-primary" href="#modal-form">Novo</a>
                        </span>

                        <div id="modal-form" class="modal fade" aria-hidden="true" data-backdrop="false" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">

                                    <div class="modal-header">
                                        <h3 class="m-t-none m-b">Novo Usuário</h3>

                                    </div>

                                    <div class="modal-body">
                                        <div class="row">
                                            <div>

                                                <form role="form">
                                                    <div class="form-group"><label>CPF</label> <input required type="text" placeholder="* CPF" class="form-control"></div>
                                                    <div class="form-group"><label>Nome</label> <input type="text" placeholder="* Nome" class="form-control"></div>
                                                    <div class="form-group"><label>Email</label> <input type="email" placeholder="* Email" class="form-control"></div>
                                                    <div class="form-group"><label>Celular</label> <input type="tel" placeholder="Celular" class="form-control"></div>
                                                    <div class="form-group"><label>Telefone Coorporativo</label> <input type="tel" placeholder="* Telefone Coorporativo" class="form-control"></div>


                                                    <div class="form-group">
                                                        <label class="font-noraml">Perfil</label>
                                                        <div class="input-group">
                                                            <select data-placeholder="Choose a Country..." class="chosen-select" style="width:350px;" tabindex="4">
                                                                <option value="">Select</option>
                                                                <option value="United States">Cliente</option>
                                                                <option value="United Kingdom">Transportador</option>
                                                                <option value="Afghanistan">Supervisor</option>
                                                                <option value="Afghanistan">Diretor</option>
                                                                <option value="Afghanistan">Administrador</option>
                                                            </select>

                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="font-noraml">Cliente</label>
                                                        <div class="input-group">
                                                            <select data-placeholder="Choose a Country..." class="chosen-select" style="width:350px;" tabindex="4">
                                                                <option value="">Select</option>
                                                                <option value="United States">Cliente 1</option>
                                                                <option value="United Kingdom">Cliente 2</option>
                                                                <option value="Afghanistan">Cliente 3</option>
                                                            </select>

                                                        </div>
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="font-noraml">Transportador</label>
                                                        <div class="input-group">
                                                            <select data-placeholder="Choose a Country..." class="chosen-select" style="width:350px;" tabindex="4">
                                                                <option value="">Select</option>
                                                                <option value="United States">Transp 1</option>
                                                                <option value="United Kingdom">Transp 2</option>
                                                                <option value="Afghanistan">Transp 3</option>
                                                            </select>

                                                        </div>
                                                    </div>

                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-white" data-dismiss="modal">Fechar</button>
                                                        <button type="button" class="btn btn-primary">Salvar</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>

                                    <th colspan="2">Nome</th>
                                    <th>CPF</th>
                                    <th colspan="2">Email</th>
                                    <th colspan="2"> Celular</th>
                                    <th> Perfil</th>
                                    <th> Cliente </th>
                                    <th> Transportadora </th>

                                    <th colspan="3">Açoes</th>

                                </tr>

                            </thead>
                            <tbody>
                                <tr>
                                    <td class="client-avatar"><h2><i class="fa fa-user"></i></h2></td>
                                    <td><a data-toggle="tab" href="#contact-1" class="client-link">Anthony Jackson</a></td>
                                    <td> 221.537.268-08</td>
                                    <td class="contact-type"><i class="fa fa-envelope"> </i></td>
                                    <td> gravida@rbisit.com</td>
                                    <td class="contact-type"><i class="fa fa-phone"> </i></td>
                                    <td> +5511 96753-0647</td>
                                    <td> Supervisor</td>
                                    <td> Cliente 1</td>
                                    <td> </td>
                                    <td><a data-toggle="modal" href="#confirmRemoverModal" title="Remover"><h2> <i class="fa fa-trash"></i></h2></a></td>
                                    <td><a data-toggle="modal" href="#modal-form" title="Editar"><h2><i class="fa fa-edit "></i></h2></a></td>
                                </tr>
                                <tr class=" text-warning">
                                    <td class="client-avatar"><img alt="image" src="img/a3.jpg"> </td>
                                    <td><a data-toggle="tab" href="#contact-2" class="client-link">Rooney Lindsay</a></td>
                                    <td>221.537.268-08</td>
                                    <td class="contact-type"><i class="fa fa-envelope"> </i></td>
                                    <td> rooney@proin.com</td>

                                    <td class="contact-type"><i class="fa fa-phone"> </i></td>
                                    <td> +5511 96753-0647</td>
                                    <td> Cliente</td>
                                    <td> </td>
                                    <td> Transp 1</td>
                                    <td><a href="#" title="Recuperar Registro"><h2><i class="fa fa-undo "></i></h2></a></td>

                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal HTML -->
<div id="confirmRemoverModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Tem certeza?</h4>
            </div>
            <div class="modal-body">
                <p>Você realmente quer remover o registro?</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-sm btn-default pull-left m-t-n-xs" data-dismiss="modal"><strong>  Não  </strong></button>
                <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>  SIM  </strong></button>
            </div>
        </div>

    </div>
</div>

