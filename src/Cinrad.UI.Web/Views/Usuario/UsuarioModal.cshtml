@model Cinrad.Service.ViewModels.UsuarioViewModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h3 class="m-t-none m-b">Novo Usuário</h3>
        </div>
        <div class="modal-body">
            <div class="row">
                <div>
                    <form role="form" asp-controller="Usuario" asp-action="Registrar" method="post">
                        <div class="text-danger" asp-validation-summary="All"></div>

                        <div class="form-group">
                            <label asp-for="Nome"></label>
                            <input asp-for="Nome" placeholder="Nome" type="text" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" placeholder="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CPF"></label>
                            <input asp-for="CPF" placeholder="CPF" type="number" class="form-control" />
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Celular"></label>
                            <input asp-for="Celular" placeholder="Celular" type="tel" class="form-control" />
                            <span asp-validation-for="Celular" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Telefone"></label>
                            <input asp-for="Telefone" placeholder="Telefone Coorporativo" type="tel" class="form-control" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="font-noraml">Perfil</label>
                            <div class="input-group">
                                <select data-placeholder="Escolha o perfil do usuário..." class="chosen-select" style="width:350px;" tabindex="4">
                                    <option value="">Select</option>
                                    <option value="Cliente">Cliente</option>
                                    <option value="Transportador">Transportador</option>
                                    <option value="Supervisor">Supervisor</option>
                                    <option value="Diretor">Diretor</option>
                                    <option value="Admin">Administrador</option>
                                    <option value="PowerUser">Super Admin</option>
                                </select>

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="font-noraml">Cliente</label>
                            <div class="input-group">
                                <select data-placeholder="Escolha um cliente..." class="chosen-select" style="width:350px;" tabindex="4">
                                    <option value="">Select</option>
                                    <option value="United States">Cliente 1</option>
                                    <option value="United Kingdom">Cliente 2</option>
                                    <option value="Afghanistan">Cliente 3</option>
                                </select>

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="font-noraml">Transportador</label>
                            <div class="input-group">
                                <select data-placeholder="Choose a Country..." class="chosen-select" style="width:350px;" tabindex="4">
                                    <option value="">Select</option>
                                    <option value="United States">Transp 1</option>
                                    <option value="United Kingdom">Transp 2</option>
                                    <option value="Afghanistan">Transp 3</option>
                                </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white" data-dismiss="modal">Fechar</button>
                            <button type="submit" class="btn btn-primary">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

