@model Cinrad.Service.ViewModels.UsuarioViewModel


<div class="modal-header">
    <h3 class="m-t-none m-b">Atualizar Usuário</h3>
</div>
<div class="modal-body">
    <div class="row">
        <div>
            <form role="form"  asp-action="Editar" asp-controller="Usuario" method="post">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div hidden>
                    <input asp-for="Id" />
                </div>
                <div class="form-group">
                    <label asp-for="Nome"></label>
                    <input asp-for="Nome" placeholder="* Nome" type="text" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" placeholder="* Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CPF"></label>
                    <input asp-for="CPF" placeholder="* CPF" type="number" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Celular"></label>
                    <input asp-for="Celular" placeholder="Celular" type="tel" class="form-control" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefone"></label>
                    <input asp-for="Telefone" placeholder="* Telefone Coorporativo" type="tel" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="font-noraml">Perfil</label>
                    <div class="input-group">
                        <select name="perfil" asp-items="Html.GetEnumSelectList(typeof(Cinrad.Service.Enums.PerfilEnum))" class="chosen-select" style="width:350px;" tabindex="4"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="font-noraml">Cliente</label>
                    <div class="input-group">
                        <select asp-for="ClienteId" asp-items="@ViewBag.Clientes" class="chosen-select" style="width:350px;" tabindex="4">
                            <option value="">--Nenhum--</option>
                        </select>
                        <span asp-validation-for="ClienteId"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="font-noraml">Transportador</label>
                    <div class="input-group">
                        <select asp-for="TransportadoraId" asp-items="@ViewBag.Transportadoras" class="chosen-select" style="width:350px;" tabindex="4">
                            <option value="">--Nenhum--</option>
                        </select>
                        <span asp-validation-for="TransportadoraId"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">Fechar</button>
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

