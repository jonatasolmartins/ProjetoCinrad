@model Cinrad.Service.ViewModels.ClienteViewModel;
@{
    ViewData["Title"] = "RegistrarCliente";
}

<link href="~/css/cliente_page.css" rel="stylesheet" />

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Cliente</h2>
        <ol class="breadcrumb">
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="active">
                <strong>Registrar Cliente</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-sm-18">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-10">
                            <div class="input-group">
                                <input type="text" placeholder="Buscar Cliente " class="input form-control">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn btn-white"> <i class="fa fa-search"></i> Buscar</button>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-2 ">
                            <div class="input-group">
                                <select name="status" id="status" class="input form-control btn-white">
                                    <option value="1" selected>Ativo</option>
                                    <option value="0">Inativo</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="clients-list ">
                        <span class="input-group-btn">
                            <a asp-action="ClienteModal" asp-controller="Cliente" class="btn btn-primary" data-target="#modal-form" data-toggle="modal"> Novo</a>
                        </span>
                        <div id="modal-form" class="modal fade" aria-hidden="true" data-backdrop="false" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    @await Html.PartialAsync("ClienteModal");
                                </div>
                            </div>
                        </div>               

                        <div class="table-responsive">
                            @foreach (var cliente in ViewBag.Clientes)
                            {
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Código</th>
                                        <th>CNPJ</th>
                                        <th>Razão Social</th>
                                        <th> Nome Fantasia</th>
                                        <th> Telefone</th>
                                        <th> Site</th>
                                        <th colspan="4">Açoes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>@cliente.Codigo</td>
                                        <td>@cliente.Cnpj</td>
                                        <td>@cliente.RazaoSocial</td>
                                        <td>@cliente.Telefone</td>
                                        <td>@cliente.Site</td>
                                        @*<td><a data-toggle="modal" href="#confirmRemoverModal" title="Remover"><h2> <i class="fa fa-trash"></i></h2></a></td>*@
                                        <td><a data-toggle="modal" href="#modal-form" title="Editar"><h2><i class="fa fa-edit "></i></h2></a></td>
                                        <td><a asp-action="ClienteTransportadoraModal" asp-controller="Cliente" data-target="#modal-transportadora" data-toggle="modal"><h2><i class="fa fa-users "></i></h2></a>
                                    </tr>
                                </tbody>
                            </table>                           
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal HTML -->
    <div id="confirmRemoverModal" class="modal fade">
        <div class="modal-dialog modal-confirm">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Tem certeza?</h4>
                </div>
                <div class="modal-body">
                    <p>Você realmente quer remover o registro?</p>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-sm btn-default pull-left m-t-n-xs" data-dismiss="modal"><strong>  Não  </strong></button>
                    <button class="btn btn-sm btn-primary pull-right m-t-n-xs" type="submit"><strong>  SIM  </strong></button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal HTML -->
    <div id="modal-transportadora" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">           
                @await Html.PartialAsync("ClienteTransportadoraModal");
            </div>
        </div>
    </div>
</div>
<script src="js/plugins/colorpicker/bootstrap-colorpicker.min.js"></script>

<script src="~/js/cliente_page.js" asp-append-version="true">
    $(document).ready(function () {
        teste();
        fnClickAddRow();
    });

</script>